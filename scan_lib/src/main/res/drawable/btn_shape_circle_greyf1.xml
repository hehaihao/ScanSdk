<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 圆角 -->
    <corners
        android:radius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:bottomRightRadius="30dp"/><!-- 设置圆角半径 -->
    <!-- 间隔 -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/><!-- 各方向的间隔 -->

    <!-- 大小 -->
    <size
        android:width="60dp"
        android:height="60dp"/><!-- 宽度和高度 -->

    <solid
        android:color="#fff1f1f1"/>
</shape>